<h2>
  <%= t '.change_my_password' %>
</h2>

<%= form_for(resource,
  as: resource_name,
  url: password_path(resource_name),
  html: { method: :put }) do |f|
%>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="my-2">
    <%= f.password_field :password,
      placeholder: t('activerecord.attributes.user.password'),
      autofocus: true,
      autocomplete: "new-password" %>
    <%= f.label :password, fa_icon('key') %>
  </div>

  <div class="my2">
    <%= f.password_field :password_confirmation,
    placeholder: t('.confirm_new_password'),
    autocomplete: "new-password" %>
    <%= f.label :password_confirmation, fa_icon('key') %>
  </div>

  <div class="my-2">
    <%= f.submit t('.change_my_password'),
      class: 'btn btn-primary'
    %>
  </div>
<% end %>

<%= link_to t('devise.shared.links.sign_in'),
  new_session_path(resource_name)
%>
<br />
<%= link_to t('devise.shared.links.sign_up'),
  new_registration_path(resource_name)
%>
