<h2>Войти</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class='my-2'>
    <%= f.email_field :email, placeholder: 'Email', autofocus: true, autocomplete: 'email' %>
    <%= f.label :email, fa_icon('envelope') %>
  </div>

  <div class='my-2'>
    <%= f.password_field :password, placeholder: 'Пароль', autocomplete: 'new-password' %>
    <%= f.label :password, fa_icon('unlock') %>
  </div>

  <div class='my-2'>
    <%= f.check_box :remember_me %>
    <%= f.label :remember_me, 'Запомнить меня' %>
  </div>

  <div class="my-2">
    <%= f.submit "Войти", class: 'btn btn-primary' %>
  </div>
<% end %>

<%= link_to 'Зарегистрироваться', new_registration_path(resource_name) %><br />
<%= link_to 'Забыли пароль?', new_password_path(resource_name) %><br />
