
<div class="event">
  <div class="event-info row">
    <div class="col-md-12">
      <%= content_tag 'div', '', class: 'event-background',
       style: "background-image: url(#{asset_path('event.jpg')})"
      %>

      <div class="event-info-inner row">
        <div class="col-md-6">
          <div class="event-description">
            <h1><%= @event.title %></h1>
            <h3><%= l @event.datetime, format: :short %></h3>
            <h3><small><%= link_to @event.address,
                "https://yandex.ru/maps/?text=#{@event.address}" %></small></h3>
            <p><%= @event.description %></p>
          </div>

          <% if owns_event?(@event) %>
            <div class="d-flex my-2">
              <div class="mr-2">
                <%= link_to t('views.events.show.edit_button'),
                  edit_event_path(@event),
                  class: 'btn btn-primary' %>
              </div>

              <div class="mx-2">
                <%= button_to t('views.events.show.delete_button'),
                  event_path(@event),
                  method: :delete,
                  data: { confirm: t('views.events.show.confirm_delete') },
                  class: 'btn btn-danger' %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
