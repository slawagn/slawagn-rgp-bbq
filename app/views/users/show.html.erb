<div class="text-center">
  <h1><%= @user.name %></h1>

  <%= image_tag user_avatar(@user) %>

  <div class="row">
    <div class="col-md-12">
      <% if @user.events.any? %>
        <h3><%= t('.events_organized') %></h3>
        <div class="row">
          <%= render partial: 'events/event', collection: @user.events %>
        </div>
      <% else %>
        <p class="buffer-top"><%= t('.no_events_organized') %></p>
      <% end %>
    </div>
  </div>

  <% if @user == current_user %>
    <p class="mt-4">
      <%= link_to t('.edit_profile'), edit_user_path(@user),
        class: 'btn btn-primary' %>
    </p>
  <% end %>
</div>

